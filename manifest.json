{
    "manifest_version": 3,
    "name": "Biscoti.io",
    "version": "1.0",
    "description": "Advanced privacy preference manager for web browsing",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "options_page": "options/options.html"
  }